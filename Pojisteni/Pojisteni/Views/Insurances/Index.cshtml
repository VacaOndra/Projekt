@model IEnumerable<Pojisteni.Models.Insurance>

@{
    ViewData["Title"] = "Pojištění";
}
<p>
    <a asp-action="Create" class="btn btn-primary"><i data-feather="plus-circle" class="mr-2"></i>Nové pojištění</a>
</p>
@if (Model.Count() > 0)
{
    <table id="data-table" class="table table-sm table-striped">
        <thead>
            <tr>
                <th>
                    Název
                </th>
                <th class="fit"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle fit">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Editovat</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light-warning text-center h6" role="alert">
        Zatím nemáte založené žádné pojištění
    </div>
}
