@model IEnumerable<Pojisteni.Models.InsuranceInsured>

@{
    ViewData["Title"] = "Sjednané pojistky";
}
@if (Model.Count() > 0)
{
    <table id="data-table" class="table table-sm table-striped">
        <thead>
            <tr>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.Insured.LastNameAndName)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.Insurance)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.StartsAt)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.EndsAt)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th class="fit"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fit pl-1 pr-5">
                        @Html.DisplayFor(modelItem => item.Insured.LastNameAndName)
                    </td>
                    <td class="fit pl-1 pr-5">
                        @Html.DisplayFor(modelItem => item.Insurance.Name)
                    </td>
                    <td class="fit pl-1 pr-5">
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td class="fit pl-1 pr-5">
                        @item.StartsAt.ToShortDateString()
                    </td>
                    <td class="fit pl-1 pr-5">
                        @item.EndsAt.ToShortDateString()
                    </td>
                    <td class="fit pl-1 pr-5 text-center">
                        @if (item.Status)
                        {
                            <span class="badge bg-danger">@item.StatusString</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.StatusString</span>
                        }
                    </td>
                    <td class="align-middle fit">
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Editovat</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light-warning text-center h6" role="alert">
        Zatím nemáte sjednané žádné pojištění
    </div>
}