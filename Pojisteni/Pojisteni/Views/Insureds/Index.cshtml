@model IEnumerable<Pojisteni.Models.Insured>

@{
    ViewData["Title"] = "Pojištěnci";
}
<p>
    <a asp-action="Create" class="btn btn-primary"><i data-feather="plus-circle" class="mr-2"></i>Nový pojištenec</a>
</p>
@if (Model.Count() > 0)
{

    <table id="data-table" class="table table-sm table-striped">
        <thead>
            <tr>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.LastNameAndName)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.FullAdress)
                </th>
                <th class="fit pl-1 pr-5">
                    @Html.DisplayNameFor(model => model.IdentityNumber)
                </th>
                <th>
                    Uzavřené pojistky
                </th>
                <th class="fit"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle fit pl-1 pr-5">
                        <a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.LastNameAndName)</a>
                    </td>
                    <td class="align-middle fit pl-1 pr-5">
                        @Html.DisplayFor(modelItem => item.FullAdress)
                    </td>
                    <td class="align-middle fit pl-1 pr-5">
                        @Html.DisplayFor(modelItem => item.IdentityNumber)
                    </td>
                    <td class="align-middle">
                        @item.InsuranceInsureds.Count()
                    </td>
                    <td class="align-middle fit">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Editovat</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light-warning text-center h6" role="alert">
        Zatím nemáte v databázi žádného pojištěnce
    </div>
}